@model CommunAxiom.Accounts.Models.AppClaim
@{
    var buttonText = "Create";
    var action = "Edit";
    if (Model?.Id > 0)
    {
        ViewData["Title"] = "Modify the App Claim";
        buttonText = "Save";
    }
    else
    {
        ViewData["Title"] = "Create a new App Claim";
        action = "Create";
    }
}

<div class="level">
    <div class="level-item">
        <div class="card w-25">
            <div class="card-header">
                <div class="card-header-title">
                    <p class="title is-4">
                        @ViewData["Title"]
                    </p>
                </div>
                <div class="card-header-icon">
                    <a asp-action="Details" asp-controller="AppNamespace" asp-route-id="@Model.AppNamespaceId"><img src="~/Images/Back.png" class="icon" /></a>
                </div>
            </div>
            <div class="card-content">
                <form asp-area="Management" asp-action="@action" asp-controller="AppClaim" method="post" role="form">
                    @if (Model?.Id > 0)
                    {
                        <input asp-for="Id" type="hidden" />
                        <input asp-for="AppNamespaceId" type="hidden" />
                    }
                    <div asp-validation-summary="All" class="help is-danger"></div>
                    <div class="field">
                        <label asp-for="ClaimName" class="label"></label>
                        <input asp-for="ClaimName" class="input is-primary" />
                        <span asp-validation-for="ClaimName" class="help is-danger"></span>
                    </div>
                    <div class="field">
                        <label asp-for="Description" class="label"></label>
                        <input asp-for="Description" class="input is-primary" />
                        <span asp-validation-for="Description" class="help is-danger"></span>
                    </div>
                     
                    <div class="field is-grouped">
                        <div class="control">
                            <button type="submit" class="button is-link">@buttonText</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

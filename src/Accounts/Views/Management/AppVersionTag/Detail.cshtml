@using CommunAxiom.Accounts.Contracts
@model AppVersionTag
@inject ILookupStore lookupStore
@{
    ViewData["Title"] = "Application Version Tag Details";
    var versions = lookupStore.ListAppVersionTags(Model.ApplicationType.Id).Select(x=> new SelectListItem(x.Name, x.Value.ToString()));
    ViewBag.ApplicationTypeId = Model.ApplicationTypeId;
    ViewBag.Id = Model.Id;
}

<div class="card w-25" style="margin-bottom: 1em;">
    <div class="card-header">
        <div class="card-header-title">
            <p class="title is-4">
                @ViewData["Title"]
            </p>
        </div>
        <div class="card-header-icon">
            <a asp-controller="ApplicationType" asp-action="Details" asp-route-id="@Model.ApplicationTypeId"><img src="~/Images/Back.png" class="icon" /></a>
        </div>
    </div>
    <div class="card-content">
        <div class="field">
            <label asp-for="ApplicationType" class="label"></label>
            <span class="is-primary">@Model.ApplicationType.Name</span>
        </div>
        <div class="field">
            <label asp-for="Name" class="label"></label>
            <span class="is-primary">@Model.Name</span>
        </div>
        <div class="field">
            <label asp-for="SortValue" class="label"></label>
            <span class="is-primary">@Model.SortValue</span>
        </div>
        <div class="field">
            <label asp-for="CreationDate" class="label"></label>
            <span class="is-primary">@Model.CreationDate</span>
        </div>
        <div class="field">
            <label asp-for="DeprecationDate" class="label"></label>
            <span class="is-primary">@Model.DeprecationDate</span>
        </div>
    </div>
</div>


<div class="card w-25">
    <div class="card-header">
        <div class="card-header-title">
            <p class="title is-4">
                Application Version Configurations
            </p>
        </div>
    </div>
    <div class="card-content">
        <div>
            @await Html.PartialAsync("CopyFromForm.cshtml", new AppVersionTagSource())
        </div>
        <div id="cfg_lst">
            @await Html.PartialAsync("ListConfig.cshtml", Model)
        </div>
    </div>
</div>
@model CommunAxiom.Accounts.ViewModels.Network.GroupMemberViewModel;


@{
    ViewBag.Title = "Group Member Detail";
}

<div class="columns is-variable is-5">
    <div class="column is-3">
        <div class="columns">
            <div class="column is-12">
                @Html.Partial("../Shared/Network/MyNetwork.cshtml")
            </div>
        </div>
    </div>
    <div class="column is-9">
        <div class="columns">
            <div class="column is-12">
                <div class="card has-background-white">
                    <div class="card-content">
                        <div class="columns">
                            <div class="column is-11">
                                <h5>Group Details</h5>
                            </div>
                            <div class="column is-1">
                                <a asp-controller="Network" asp-area="" asp-action="Groups">
                                    <img class="image icon" src="~/Images/back.png" />
                                </a>
                            </div>
                        </div>
                        <div class="columns">
                            <div class="column is-12">
                                <div class="media">
                                    <div class="media-left">
                                        <figure class="image is-96x96">
                                            @if (Model.GroupMemberRole.GroupMember.User.ProfilePicture != null)
                                            {
                                                <img id="profilePicture" style="width:96px;height:96px;object-fit:cover; border-radius: 60px" src="data:image/*;base64,@(Convert.ToBase64String(@Model.GroupMemberRole.GroupMember.User.ProfilePicture))">
                                            }
                                            else
                                            {
                                                <img id="profilePicture" style="width:96px;height:96px;object-fit:cover; border-radius: 60px" src="~/Images/userIcon.png">
                                            }

                                        </figure>
                                    </div>
                                </div>
                                <div class="field">
                                    <label asp-for="@Model.GroupMemberRole.GroupMember.User.UserName" class="label"></label>
                                    <input asp-for="@Model.GroupMemberRole.GroupMember.User.UserName" class="input is-primary" />

                                </div>
                                <div class="field">
                                    <label class="label">Admin</label>
                                    <input type="radio" asp-for="@Model.GroupMemberRole.GroupRole.Id" text="@Model.GroupMemberRole.GroupRole.Name" value="@Model.GroupMemberRole.GroupRole.Id" />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }





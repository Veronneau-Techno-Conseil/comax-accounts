@model CommunAxiom.Accounts.ViewModels.Network.GroupViewModel
@using CommunAxiom.Accounts.Helpers
@{
    ViewData["Title"] = "Add Group";
}



<div class="columns is-variable is-5">
    <div class="column is-3">
        <div class="columns">
            <div class="column is-12">
                @Html.Partial("../Shared/Network/MyNetwork.cshtml")
            </div>
        </div>
    </div>
    <div class="column is-9">
        <div class="columns">
            <div class="column is-12">
                <div class="card has-background-white">
                    <div class="card-content">
                        <div class="columns">
                            <div class="column is-12">
                                <h5>Add Group</h5>
                            </div>
                        </div>
                        <form asp-controller="Network" asp-action="AddGroup" asp-route-returnurl="@ViewData["ReturnUrl"]" enctype="multipart/form-data" method="post" role="form">
                            <div class="columns">
                                <div class="column is-12">
                                    <div asp-validation-summary="All" class="help is-danger"></div>
                                </div>
                            </div>
                            <div class="columns">
                                <div class="column is-6">
                                    <div class="field">
                                        <label asp-for="Name" class="label"></label>
                                        <input asp-for="Name" class="input is-primary" />
                                        <span asp-validation-for="Name" class="help is-danger"></span>
                                    </div>
                                    <div class="field">
                                        <label class="label">Owner</label>
                                        <input asp-for="Owner.UserName" class="input is-primary" readonly />
                                        <span asp-validation-for="Owner.UserName" class="help is-danger"></span>
                                    </div>
                                </div>
                                <div class="column is-6">
                                    <div class="field">
                                        <label class="label">Group Picture</label>
                                        <div width="100%">
                                            <img id="profilePicture" style="width:100%;height:350px;object-fit:cover; border-radius: 60px" src="">
                                        </div>
                                        <div class="file is-fullwidth">
                                            <label class="file-label">
                                                <input class="file-input" type="file" name="file" accept=".png,.jpg,.jpeg,.gif,.tif"
                                                       style="border:0px!important;padding: 0px;"
                                                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0]); document.getElementById('FileName').value = this.files[0].name;" />
                                                <span class="button is-link">
                                                    Choose a file…
                                                </span>
                                                <input asp-for="FileName" id="FileName" class="input is-primary" readonly />
                                            </label>
                                        </div>
                                    </div>
                                    <span asp-validation-for="FileName" class="help is-danger"></span>
                                </div>
                            </div>
                            <div class="columns">
                                <div class="column is-12">
                                    <div class="field is-grouped">
                                        <div class="control">
                                            <button type="submit" class="button is-link">Create Group</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }




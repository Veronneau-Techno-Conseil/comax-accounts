@model ManageViewModel
@{
    ViewData["Title"] = "Manage Applications";
}

<div class="container">
    <div class="level content">
        <h1 class="level-item is-4">Applications Management</h1>
    </div>
    <hr />
    <table id="ApplicationsTable" class="table" cellspacing="0">
        <thead>
            <tr>
                <th>
                    Display Name
                </th>
                <th><abbr title=""><a asp-controller="Applications" asp-area="" asp-action="Register"><img class="icon" src="~/Images/Add.png" /></a></abbr></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Applications)
            {
                <tr>
                    <td>
                        <a asp-controller="Applications" asp-action="Details" asp-route-Id="@item.Id">@Html.DisplayFor(modelItem => item.DisplayName)</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-area="" asp-controller="Applications" asp-route-Id="@item.Id"><img src="~/Images/View.png" class="icon" /> </a> 
                        <a asp-action="Delete" asp-area="" asp-controller="Applications" asp-route-Id="@item.Id"><img src="~/Images/Delete.png" class="icon" /> </a> 
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>